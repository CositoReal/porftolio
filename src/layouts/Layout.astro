---
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" id="home">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Astro description" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
</head>
<body>
  <Nav />
  <main>
    <slot />
  </main>
  <Footer />
</body>
</html>

<style is:global>
  html{
    scroll-behavior: smooth;
  }
  body {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
    --tw-bg-opacity: 1;
    --tw-txt-opacity: 1;
    background-color: rgb(14 16 21);
    background-image: url(../logos/fondo.svg);
  }
  .bg-custom {
    background-color: #1f2d4099;
  }
  .bg-custom-1 {
    background-color: #1f2d40;
  }
  .bg-custom-09 {
    background-color: rgba(31, 45, 64, 0.9);
  }
  .text-custom {
    color: #f8ee33;
  }
  .text-long-custom {
    color: rgb(253, 253, 194);
  }
  .border-custom-1 {
    border-color: #1f2d40;
  }
  button{
    transition: background-color 2s;
    transition: width 2s;
  }
</style>
